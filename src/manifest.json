{
    "manifest_version": 2,

    "name": "Chromescape Navigator",
    "description": "Show the Netscape Navigator or Internet Explorer loading animation in Firefox",
    "version": "1.3.0",

    "icons": {
        "16": "logo/logo16.png",
        "48": "logo/logo48.png",
        "128": "logo/logo128.png"
    },
    "browser_action": {
        "default_icon": "logo/logo16.png"
    },
    "background": {
        "scripts": ["script.js"],
        "persistent": false
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false
    },
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "applications": {
        "gecko": {
            "id": "chromescape-navigator@example.com",
            "strict_min_version": "57.0"
        }
    }
}